/**************************** Basic parameters ****************************/

params {
    // Common directories
    main_dir = "/hpcnfs/scratch/DIMA/chiodin/tests/img_reg_pipeline"
    input_dir = "${params.main_dir}/data/input"
    output_dir = "${params.main_dir}/data/output"

    logs_dir = "${params.main_dir}/logs"
    backup_dir = "${params.logs_dir}/io/backups"
    sample_sheet_dir = "${params.logs_dir}/io/"
    
    // Process directories
    //// Image conversion
    input_dir_conv = "${params.input_dir}/image_conversion"
    output_dir_conv = "${params.output_dir}/image_conversion"
    mappings_dir = "${params.main_dir}/data/mappings"
    registered_crops_dir = "${params.main_dir}/data/registered_crops"

